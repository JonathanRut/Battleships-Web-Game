        <nav>
          <ul id = "navbar">
            <li>
              <a href="/">Battleships</a>
            <li id="loginlink">
                <a href="/login">Log In</a>
            </li>
            <li id="loginlink"i>
                <a href="/signup">Sign Up</a>
            </li>
          </ul>
        </nav>

        <form action="/auth/login" method="post">
            <h2>Log in</h2>
            <label for="username">Username</label>
            <input type="text" id="username" style="width: 200px;" name="username">
            <label for="password">Passsword</label>
            <input type="password" id="password" style="width: 200px;" name="password">
            <br>
            <input type = "submit" id="submit">
            {{#if message}}
              <h4>{{message}}</h4>
            {{/if}}
        </form>
